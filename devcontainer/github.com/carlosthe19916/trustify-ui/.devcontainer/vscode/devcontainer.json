{
  "name": "trustify-ui",
  "dockerComposeFile": "../docker-compose.yml",
  "overrideCommand": true,
  "shutdownAction": "stopCompose",
  "service": "trustify-ui",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "onCreateCommand": "curl -s https://raw.githubusercontent.com/devcontainers/features/refs/heads/main/src/node/install.sh | sudo VERSION=22 bash",
  "postCreateCommand": "bash -c /tmp/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "biomejs.biome",
        "ms-playwright.playwright",
        "alexkrechik.cucumberautocomplete"
      ],
      "settings": {
        "biome.searchInPath": false,
        "biome.lspBin": "node_modules/@biomejs/cli-linux-x64/biome",
        "editor.defaultFormatter": "biomejs.biome",
        "[javascript]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[typescript]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "editor.codeActionsOnSave": {
          "quickfix.biome": "explicit",
        },
        "cucumberautocomplete.steps": [
          "e2e/tests/ui/features/@*/*.step.ts",
          "e2e/tests/ui/steps/*.ts"
        ],
        "cucumberautocomplete.strictGherkinCompletion": true
      }
    }
  }
}
